<Page
    x:Class="Fiona.Views.AlbumDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Fiona.Core.Models"
    xmlns:viewmodels="using:Fiona.ViewModels"
    xmlns:helpers="using:Fiona.Helpers"
    xmlns:controls="using:Fiona.Controls"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">

    <Page.DataContext>
        <viewmodels:BaseViewModel x:Name="BaseVM"/>
    </Page.DataContext>

    <Grid x:Name="ContentArea" Margin="0,-62,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Column="0" Grid.Row="0" Padding="36,36,36,36"
              Background="{ThemeResource SystemChromeMediumLowColor}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="36"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Image Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" x:Name="itemHero"
                Height="236" Width="236" Stretch="UniformToFill"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Source="{x:Bind ViewModel.CurrentAlbum.ArtworkUrl, Mode=OneWay}" />

            <StackPanel Grid.Column="2" Grid.Row="0" Margin="0,-8,0,0">
                <TextBlock
                    x:Name="title"
                    Margin="{StaticResource XXSmallTopMargin}"
                    RelativePanel.AlignTopWithPanel="True"
                    RelativePanel.RightOf="itemHero"
                    FontSize="{StaticResource XLargeFontSize}"
                    Text="{x:Bind ViewModel.CurrentAlbum.Name, Mode=OneWay}" FontWeight="Light" TextWrapping="Wrap" />
                <TextBlock Style="{ThemeResource BodyTextBlockStyle}" Text="{x:Bind ViewModel.CurrentAlbum.ArtistName, Mode=OneWay}" />
                <TextBlock Style="{ThemeResource BodyTextBlockStyle}" Text="{x:Bind ViewModel.AlbumShortInfo, Mode=OneWay}" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="1"
                        VerticalAlignment="Bottom" HorizontalAlignment="Left"
                        Margin="-12,0,0,0">
                <Button Background="{x:Null}" Command="{x:Bind ViewModel.PlayAlbumCommand}" CommandParameter="{x:Bind ViewModel.CurrentAlbum}" Margin="4,0,4,0">
                    <StackPanel Orientation="Horizontal">
                        <FontIcon Glyph="&#xE102;" FontSize="{StaticResource SmallGlyphSize}" Margin="0,0,8,0"/>
                        <TextBlock x:Uid="Album_PlayAll" FontSize="{StaticResource SmallFontSize}"/>
                    </StackPanel>
                </Button>
                <Button Background="{x:Null}" Command="{x:Bind ViewModel.QueueAlbumCommand}" CommandParameter="{x:Bind ViewModel.CurrentAlbum}" Margin="4,0,4,0">
                    <StackPanel Orientation="Horizontal">
                        <FontIcon Glyph="&#xE109;" FontSize="{StaticResource SmallGlyphSize}" Margin="0,0,8,0"/>
                        <TextBlock x:Uid="Album_AddToQueue" FontSize="{StaticResource SmallFontSize}"/>
                    </StackPanel>
                </Button>
                <Button Background="{x:Null}" Command="{x:Bind ViewModel.GoToArtistCommand}" CommandParameter="{x:Bind ViewModel.CurrentArtist}" Margin="4,0,4,0">
                    <StackPanel Orientation="Horizontal">
                        <FontIcon Glyph="&#xE13D;" FontSize="{StaticResource SmallGlyphSize}" Margin="0,0,8,0"/>
                        <TextBlock x:Uid="Album_GoToArtist" FontSize="{StaticResource SmallFontSize}"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <controls:AlternatingRowListView Grid.Column="0" Grid.Row="1"
            ItemsSource="{x:Bind ViewModel.CurrentAlbum.Tracks, Mode=OneWay}" Margin="28,28,28,28"
            EvenRowBackground="{ThemeResource MyEvenRowBrush}"
            OddRowBackground="{ThemeResource MyOddRowBrush}">

            <controls:AlternatingRowListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"></Setter>
                </Style>
            </controls:AlternatingRowListView.ItemContainerStyle>
            <controls:AlternatingRowListView.ItemTemplate>
                <DataTemplate x:DataType="models:Track">
                    <Grid ColumnSpacing="8" VerticalAlignment="Center"
                          helpers:VisibilityHelper.VisibilityOnHover="{Binding ElementName=TrackControls}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="{x:Bind TracknumSort, Mode=OneWay}"/>
                        <TextBlock Grid.Column="1" VerticalAlignment="Center" Text="{x:Bind Title, Mode=OneWay}"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" x:Name="TrackControls"
                                    HorizontalAlignment="Right" Visibility="Collapsed">
                            <Button VerticalAlignment="Stretch" Margin="4,0,4,0"
                                Background="Transparent"
                                Command="{x:Bind BaseVM.PlayTrackCommand}"
                                CommandParameter="{x:Bind}">
                                <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xE102;" FontSize="16" />
                            </Button>
                            <Button VerticalAlignment="Stretch" Margin="4,0,4,0"
                                Background="Transparent"
                                Command="{x:Bind BaseVM.QueueTrackCommand}"
                                CommandParameter="{x:Bind}">
                                <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xE109;" FontSize="16" />
                            </Button>
                        </StackPanel>
                        <TextBlock Grid.Column="2" VerticalAlignment="Center" Text="{x:Bind Artist, Mode=OneWay}"/>
                        <TextBlock Grid.Column="3" VerticalAlignment="Center" Text="{x:Bind DurationText, Mode=OneWay}"/>
                    </Grid>
                </DataTemplate>
            </controls:AlternatingRowListView.ItemTemplate>
        </controls:AlternatingRowListView>

    </Grid>

