<Page
    x:Class="Fiona.Views.ArtistDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:models="using:Fiona.Core.Models"
    xmlns:viewmodels="using:Fiona.ViewModels"
    xmlns:helpers="using:Fiona.Helpers"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">

    <Page.DataContext>
        <viewmodels:ArtistDetailsViewModel x:Name="ArtistDetailsVM"/>
    </Page.DataContext>

    <Grid x:Name="ContentArea" Margin="0,-88,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Column="0" Grid.Row="0" Padding="36,36,36,36"
              Background="{ThemeResource SystemChromeMediumLowColor}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="36"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Image Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" x:Name="itemHero"
            Height="236" Width="236" Stretch="UniformToFill"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Source="{x:Bind ViewModel.ArtistImageUrl, Mode=OneWay}" />

            <StackPanel Grid.Column="2" Grid.Row="0">
                <TextBlock
                    x:Name="title"
                    Margin="{StaticResource XXSmallTopMargin}"
                    RelativePanel.AlignTopWithPanel="True"
                    RelativePanel.RightOf="itemHero"
                    FontSize="{StaticResource XLargeFontSize}"
                    Text="{x:Bind ViewModel.CurrentArtist.Name, Mode=OneWay}" FontWeight="Light" TextWrapping="Wrap" />
                <TextBlock Style="{ThemeResource BodyTextBlockStyle}" Text="{x:Bind ViewModel.AllGenres, Mode=OneWay}" TextWrapping="Wrap"/>
                <TextBlock Style="{ThemeResource BodyTextBlockStyle}" Text="{x:Bind ViewModel.ArtistBio, Mode=OneWay}" TextWrapping="Wrap"/>
            </StackPanel>

            <!--<StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="1"
                        VerticalAlignment="Bottom" HorizontalAlignment="Left"
                        Margin="-12,0,0,0">
                <Button CornerRadius="4" Background="{x:Null}" Command="{x:Bind ViewModel.PlayAllCommand}" CommandParameter="{x:Bind}" Margin="4,0,4,0">
